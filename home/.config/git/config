[user]
	name = TANIGUCHI Kohei
[color]
	ui = auto
[credential]
	helper = cache
[alias]
	amend = commit --amend
	ap    = add --patch
	d     = diff
	dc    = diff --cached
	g     = grep
	l     = log --oneline -5
	lg    = log --graph --oneline --decorate --all
	re    = restore
	s     = status --short --branch
	ss    = !git stash list | fzf --exit-0 --preview-window up:80% --preview 'echo {1} | tr -d : | xargs git stash show -v --color=always' | grep --only-matching stash@{.*} | xargs git stash pop
	sw    = switch
	swc   = switch --no-track --create
	swd   = switch --detach

[push]
	default = simple
[rebase]
	autosquash = true
[rerere]
	enabled = true
[help]
	autocorrect = 1
[core]
	precomposeunicode = true
	quotepath = false
	pager = diff-so-fancy | less
[diff]
	renames = copy
	compactionHeuristic = true
[url "git@github.com:"]
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"
[log]
	date = iso
[ghq]
	root = ~/src
[pull]
	ff = only
[merge]
	conflictStyle = diff3
